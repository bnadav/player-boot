@media screen and (max-width: 1019px) {
  // flex experimental fixes
  #side {
    display: none;
  }

  #main {
    flex-grow: 1;
  }

  html #main > div {
    width: 95%;
  }

  html #main .answer_options ,
  html #main .answer_options table {
    width: 90%;
  }

  #next_and_prev {
    display: block !important;
    z-index: 99;
    button {
      text-decoration: none;
      display: inline-block;
      padding: 8px 16px;
      border: none;
    }

    .previous_button {
      background-color: #f1f1f1;
      color: black;
      position: fixed;
      left: 0px;
    }

    .next_button {
      background-color: #4CAF50;
      color: white;
      position: fixed;
      right: 0px;
      opacity: 0.7;
    }

    .round {
      border-radius: 50%;
    }
  }
} 

@media screen and (min-width: 1440px) and (min-height: 900px) {
  #columns_inner_container {
    transform: scale(1.17);
  }
} 

@media screen and (min-width: 1680px) and (min-height: 1050px) {
  #columns_inner_container {
    transform: scale(1.3);
  }
} 

@media screen and (min-width: 1920px) and (min-height: 1080px) {
  #columns_inner_container {
    transform: scale(1.38);
  }
} 

@media screen and (min-width: 1920px) and (min-height: 1200px) {
  #columns_inner_container {
    transform: scale(1.5);
  }
} 



